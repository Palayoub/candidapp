{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Candidapp{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
   {# <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css"> #}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" />
  {% endblock %}
</head>

<body>
          <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header" >
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <a class="navbar-brand" href="{{ path('oc_platform_home') }}">Candidapp</a>
          </div>
          <div class="navbar-collapse collapse" >
            <ul class="nav navbar-nav">
              <li class="active"><a href="{{ path('oc_platform_home') }}">Home</a></li>
              <li><a href="{{ path('oc_platform_condition') }}">Conditions</a></li>
              <li class="active"><a href="{{ path('oc_platform_contact') }}" >Contact</a></li>
              <li><a href="{{ url('admin') }}" >Administraion</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>

  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Candidapp</h1>
      <p>
        Soumettre votre condidature dans 3 secs.
      </p>
      
      <p>
        <a class="btn btn-primary btn-lg" href="{{ path('oc_platform_show') }}">
          Remplir votre candidature !
        </a>
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Le menu</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('oc_platform_home') }}">Accueil</a></li>
          <li><a href="{{ path('oc_platform_show') }}">Ajouter une candidature</a></li>
        </ul>

        
        {# {{ render(controller("OCPlatformBundle:Advert:menu", {'limit': 3})) }} #}
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        <div class="page-header">
        <h1>Tablessss</h1>
          {#{{ include("OCPlatformBundle:Default:index.html.twig") }} #}
          {# {{ render(controller("OCPlatformBundle:Advert:show")) }} #}
        {% endblock %}
        </div>
      </div>
     <hr>

    <footer>
      <p>Copyrights © El hafi Ayoub {{ 'now'|date('Y') }}.</p>
    </footer>
  </div>
        
        
  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="{{ asset('bootstrap/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
  {% endblock %}

</body>
</html>